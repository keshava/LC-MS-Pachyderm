{
  "pipeline": {
    "name": "XcmsGroupPeaks_1"
  },
  "transform": {
    "image": "container-registry.phenomenal-h2020.eu/phnmnl/xcms:latest",
    "cmd": [ "/bin/bash" ],
    "stdin": [
    "for filename in /pfs/XcmsCollectPeaks/*;",
    "do",
    "shortname=$(basename $filename)",
    "shortname=${shortname%.*}",
    "dash='-'",
    "shortname=$(echo $shortname | cut -d'-' -f1)",
    "/usr/local/bin/group.r input=${filename} output=/pfs/out/${shortname}${dash}groups.rdata bandwidth=15 mzwid=0.005",
    "done"
    ]
  },
  "parallelism_spec": {
    "constant": 1
  },
  "input": {
    "atom": {
      "repo": "XcmsCollectPeaks",
      "glob": "/"
    }
  },
  "scale_down_threshold": "5m",
  "max_queue_size": 1
}