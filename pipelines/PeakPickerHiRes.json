{
  "pipeline": {
    "name": "PeakPicker"
  },
  "transform": {
    "image": "container-registry.phenomenal-h2020.eu/phnmnl/openms:v2.1.0_cv0.2.15",
    "cmd": [ "/bin/bash" ],
    "stdin": [
    "for filename in /pfs/FileFilter/*;",
    "do",
    "shortname=$(basename $filename)",
    "PeakPickerHiRes -in ${filename} -out /pfs/out/${shortname} -algorithm:signal_to_noise 1",
    "done"
    ]
  },
  "parallelism_spec": {
    "constant": 25
  },
  "resource_requests": {
    "memory": "1G",
    "cpu": 1
  },
  "resource_limits": {
    "memory": "1G",
    "cpu": 1
  },
  "input": {
    "atom": {
      "repo": "FileFilter",
      "glob": "/*"
    }
  },
  "scale_down_threshold": "2s",
  "max_queue_size": 1
}
